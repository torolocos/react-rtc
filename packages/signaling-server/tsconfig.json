{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "CommonJS",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
