{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:bump": "yarn build",
    "after:bump": "rm ../../package-lock.json",
    "after:npm:release": [
      "yarn workspace example upgrade @torolocos/react-rtc",
      "git add ../../apps/example/package.json"
    ]
  }
}
