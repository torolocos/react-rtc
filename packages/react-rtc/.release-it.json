{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:release": "yarn build",
    "after:release": "yarn workspace example upgrade @torolocos/react-rtc"
  }
}
