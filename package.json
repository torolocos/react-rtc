{
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint --parallel",
    "tsc:check": "turbo run lint --parallel",
    "postinstall": "husky install",
    "changelog": "auto changelog"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "8.5.0",
    "auto": "^10.37.4",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "turbo": "^1.2.16"
  },
  "packageManager": "yarn@1.22.17",
  "auto": {
    "plugins": [
      [
        "npm",
        {
          "forcePublish": false,
          "subPackageChangelogs": true,
          "monorepoChangelog": true,
          "commitNextVersion": true,
          "legacyAuth": true
        }
      ],
      "conventional-commits"
    ]
  },
  "repository": "pchalupa/react-rtc",
  "author": "pchalupa <chalupa.petr93@gmail.com>"
}
