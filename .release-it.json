{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true
  },
  "npm": false,
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    },
    "@release-it-plugins/workspaces": {
      "workspaces": ["packages/*"],
      "additionalManifests": {
        "dependencyUpdates": ["apps/*/package.json"]
      }
    }
  },
  "hooks": {
    "before:bump": "yarn build"
  }
}
